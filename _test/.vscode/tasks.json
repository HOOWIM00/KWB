{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "php-server",
      "type": "shell",
      "command": "php -S localhost:8000 -t public_html",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Development Server .* started"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "react-static-server",
      "type": "shell",
      "command": "python3 -m http.server 8080 --directory react_html",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Serving HTTP on"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "start-servers",
      "dependsOn": [
        "php-server",
        "react-static-server"
      ],
      "dependsOrder": "sequence",
      "type": "shell",
      "command": "sleep 1 && firefox http://localhost:8000 || true && sleep 1 && firefox http://localhost:8080 || true && echo Servers started",
      "problemMatcher": []
    }
  ]
}
